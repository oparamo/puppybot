{
  "name": "functions",
  "description": "Firebase Cloud Functions for puppybot.",
  "scripts": {
    "lint": "eslint . --fix",
    "serve": "firebase emulators:start --only functions,pubsub",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions,pubsub",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "12",
    "npm": "7",
    "yarn": "1"
  },
  "main": "src/index.js",
  "dependencies": {
    "firebase-admin": "9.6.0",
    "firebase-functions": "3.13.2",
    "puppeteer": "9.0.0",
    "twilio": "3.61.0"
  },
  "devDependencies": {
    "eslint": "7.25.0",
    "eslint-config-google": "0.14.0",
    "firebase-functions-test": "0.2.3"
  },
  "private": true
}
